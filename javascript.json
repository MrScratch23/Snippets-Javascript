{
    "Sacar Element de ID": {
        "prefix": "getid",
        "body": [
            "const ${1:element} = document.querySelector(\"#${2:id}\");"
        ],
        "description": "Obtener elemento por ID"
    },
    "Boton click funcionalidad": {
        "prefix": "cl",
        "body": [
            "${1:element}.addEventListener('click', ${2:handler});"
        ],
        "description": "Añadir evento click a botón"
    },
    "Crear prompt": {
        "prefix": "prompt",
        "body": [
            "const ${1:variable} = prompt('${2:Título}', '${3:Valor por defecto}');"
        ],
        "description": "Crear un prompt en JavaScript"
    },
    "Crear confirm": {
        "prefix": "confirm",
        "body": [
            "let confirmacion = confirm('X pregunta');"
        ],
        "description": "Crear un prompt en JavaScript"
    },
    "Eliminar espacios": {
        "prefix": "nospaces",
        "body": [
            "${1:texto} = ${1:texto}.replace(/\\\\s+/g, \"\");"
        ],
        "description": "Eliminar todos los espacios de un texto"
    },
    "Crear Cookie": {
        "prefix": "cookie",
        "body": [
            "document.cookie = \"${1:nombre}=\" + ${2:valor} + \"; expires=Thu, 18 Dec 2025 12:00:00 UTC; path=/\";"
        ],
        "description": "Crear una cookie con expiración"
    },
    "Leer Cookie": {
        "prefix": "getcookie",
        "body": [
            "function getCookieValue(nombre) {",
            "    const cookies = document.cookie.split(\";\");",
            "    for (let i = 0; i < cookies.length; i++) {",
            "        const cookie = cookies[i].trim();",
            "        if (cookie.startsWith(nombre + \"=\")) {",
            "            return cookie.substring(nombre.length + 1);",
            "        }",
            "    }",
            "    return null;",
            "}",
            "const ${3:valorCookie} = getCookieValue(\"${1:nombre}\");"
        ],
        "description": "Función para leer el valor de una cookie"
    },
    "formularioRegistro": {
        "prefix": "formulario",
        "body": [
            "<form action=\"/enviar\" method=\"post\">",
            "  <label for=\"nombre\">Nombre:</label>",
            "  <input type=\"text\" id=\"nombre\" name=\"nombre\" required>",
            "  <label for=\"email\">Email:</label>",
            "  <input type=\"email\" id=\"email\" name=\"email\" required>",
            "  <label for=\"password\">Contraseña:</label>",
            "  <input type=\"password\" id=\"password\" name=\"password\" required>",
            "  <label for=\"fecha\">Fecha de nacimiento:</label>",
            "  <input type=\"date\" id=\"fecha\" name=\"fecha\">",
            "  <label for=\"genero\">Género:</label>",
            "  <select id=\"genero\" name=\"genero\">",
            "    <option value=\"masculino\">Masculino</option>",
            "    <option value=\"femenino\">Femenino</option>",
            "    <option value=\"otro\">Otro</option>",
            "  </select>",
            "</form>"
        ],
        "description": "Formulario de Registro Básico"
    },
    "Tabla Básica HTML": {
        "prefix": "tabla",
        "body": [
            "<table>",
            "    <thead>",
            "        <tr>",
            "            <th>${1:Encabezado 1}</th>",
            "            <th>${2:Encabezado 2}</th>",
            "            <th>${3:Encabezado 3}</th>",
            "        </tr>",
            "    </thead>",
            "    <tbody>",
            "        <tr>",
