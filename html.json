"Tabla Básica HTML": {
    "prefix": "tabla",
    "body": [
        "<table>",
        "    <thead>",
        "        <tr>",
        "            <th>${1:Encabezado 1}</th>",
        "            <th>${2:Encabezado 2}</th>",
        "            <th>${3:Encabezado 3}</th>",
        "        </tr>",
        "    </thead>",
        "    <tbody>",
        "        <tr>",
        "            <td>${4:Dato 1}</td>",
        "            <td>${5:Dato 2}</td>",
        "            <td>${6:Dato 3}</td>",
        "        </tr>",
        "        <tr>",
        "            <td>${7:Dato 4}</td>",
        "            <td>${8:Dato 5}</td>",
        "            <td>${9:Dato 6}</td>",
        "        </tr>",
        "    </tbody>",
        "</table>",
        "$0"
    ],
    "description": "Crea una tabla HTML básica con thead y tbody"
},
"Validar Email": {
    "prefix": "emailOK",
    "body": [
        "<input type=\"text\" title=\"email\" required pattern=\"[^@]+@[^@]+\\.[a-zA-Z]{2,6}\" />"
    ],
    "description": "para validar que se crea un correo de forma correcta con expresiones regulares"
	
},
"Boton Basico": {
    "prefix": "boton",
    "body": [
        "<label>Pon lo que se pida:<br>",
        "<button id=\"elemento\" type=\"button\">Pon lo que quieras</button>",
        "</label>"
    ],
    "description": "para crear un boton mas simple que un botijo"
    
},
"formularioRegistro": {
  "prefix": "formulario",
  "body": [
    "<form action=\"/enviar\" method=\"post\">",
    "  <label for=\"nombre\">Nombre:</label>",
    "  <input type=\"text\" id=\"nombre\" name=\"nombre\" required>",
    "  <label for=\"email\">Email:</label>",
    "  <input type=\"email\" id=\"email\" name=\"email\" required>",
    "  <label for=\"password\">Contraseña:</label>",
    "  <input type=\"password\" id=\"password\" name=\"password\" required>",
    "  <label for=\"fecha\">Fecha de nacimiento:</label>",
    "  <input type=\"date\" id=\"fecha\" name=\"fecha\">",
    "  <label for=\"genero\">Género:</label>",
    "  <select id=\"genero\" name=\"genero\">",
    "    <option value=\"masculino\">Masculino</option>",
    "    <option value=\"femenino\">Femenino</option>",
    "    <option value=\"otro\">Otro</option>",
    "  </select>",
    "</form>"
  ],
  "description": "Formulario de Registro Básico"
},
"listasHTML": {
  "prefix": "lista",
  "body": [
    "<ul>",
    "  <li>${1:Elemento 1}</li>",
    "  <li>${2:Elemento 2}</li>",
    "  <li>${3:Elemento 3}</li>",
    "</ul>",
    "$0"
  ],
  "description": "Lista no ordenada (con viñetas)"
},
"listaOrdenada": {
  "prefix": "lista-ordenada",
  "body": [
    "<ol>",
    "  <li>${1:Primer elemento}</li>",
    "  <li>${2:Segundo elemento}</li>",
    "  <li>${3:Tercer elemento}</li>",
    "</ol>",
    "$0"
  ],
  "description": "Lista ordenada (numerada)"
},
  "listaDefinicion": {
    "prefix": "lista-definicion",
    "body": [
      "<dl>",
      "  <dt>${1:Término 1}</dt>",
      "  <dd>${2:Definición 1}</dd>",
      "  <dt>${3:Término 2}</dt>",
      "  <dd>${4:Definición 2}</dd>",
      "</dl>",
      "$0"
    ],
    "description": "Lista de definiciones"
  },
"listaAnidada": {
  "prefix": "lista-anidada",
  "body": [
    "<ul>",
    "  <li>${1:Elemento 1}",
    "    <ul>",
    "      <li>${2:Subelemento 1.1}</li>",
    "      <li>${3:Subelemento 1.2}</li>",
    "    </ul>",
    "  </li>",
    "  <li>${4:Elemento 2}</li>",
    "</ul>",
    "$0"
  ],
  "description": "Listas dentro de otras listas"
},
}
